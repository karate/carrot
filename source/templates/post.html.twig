    <article>
      <section class="header">
        <h3 class="post-title">{{ post.title }}</h3>
        {% if not post.is_menu %}
          <time datetime="{{ post.date|date("Y-m-d") }}">
            {{ post.date|date("F j, Y") }}
          </time>
        {% endif %}

        {% if post.tags %}
          <section class="tags">
            <ul class="tag-list">
            {% for tag in post.tags %}
              <li class="tag"><a href="{{site.web_dir}}tags/{{ tag }}">{{ tag }}</a>({{ attribute(tags, tag).posts|length }})</li>
            {% endfor %}
            </ul>
          </section>
        {% endif %}
      </section>

      <section class="content">
      {{ post.content | raw }}
      </section>
    </article>
